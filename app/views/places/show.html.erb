<div class='container'>
  <h1><%= @place.name %></h1>
  <div>
    GPS: <%= @place.width %>, <%= @place.height %>
  </div>
  <div class='row'>
    <%= link_to t(:edit), edit_place_path(@place) %> |
    <%= link_to t(:back), places_path %>
  </div>
  <div>
  <h2>Opis</h2>
  <p><%= @place.description %></p>
  </div>
  <div class='row'>
    <h2>Mapa</h2>
    <div id="map"></div>
      <script> nodes = [{ lat: <%= @place.height %>, lng: <%= @place.width %> }] </script>
  </div>
  <div class='row'>
    <h2>Galeria</h2>
    <%= link_to 'Galeria', place_images_path(@place.id) %>
    <% @images.each do |image| %>
      <div class='col-md-3 col-sm-4 col-xs-6'>
        <div class='image'><%= image_tag image.picture.to_s %></div>
        <em><%= image.name %></em>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <%= link_to t('.add_image'), new_place_image_path(@place.id) %>
  </div>
  <div class='row'>
    <h2>Komentarze</h2>
    <div id='comments'>
      <%= render @comments %>
    </div>
  </div>

  <%= form_for @comment, url: place_comments_path(@place), remote: true do |f| %>
    <div class='form group'>
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    <div class='form group'>
      <%= f.submit%>
    </div>
  <% end %>

</div>
