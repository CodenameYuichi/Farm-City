<div class='container'>
  <div class='row'>
    <div class='col-xs-3'>
      <strong><%= t('.name') %></strong>
      <%= @place.name %>
    </div>
    <div class='col-xs-3'>
      <strong><%= t('.width') %></strong>
      <%= @place.width %>
    </div>
    <div class='col-xs-3'>
      <strong><%= t('.height') %></strong>
      <%= @place.height %>
    </div>
    <div class='col-xs-3'>
      <strong><%= t('.description') %></strong>
      <%= @place.description %>
    </div>
  </div>
  <div class='row'>
    <%= link_to t(:edit), edit_place_path(@place) %> |
    <%= link_to t(:back), places_path %>
  </div>

  <div class='row'>
    <div id="map"></div>
      <script> nodes = [{ lat: <%= @place.width %>, lng: <%= @place.height %> }] </script>
  </div>

  <div class='row'>
    <% @images.each do |image| %>
      <div class='col-md-3 col-sm-4 col-xs-6'>
        <div class='image'><%= image_tag image.picture.to_s %></div>
        <em><%= image.name %></em>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <%= link_to t('.add_image'), new_place_image_path(@place.id) %>
  </div>

  <div class='row'>
    <%= render @comments %>
  </div>

  <div class='form group'>
    <%= form_for @comment, url: place_comments_path(@place) do |f| %>
        <%= f.text_area :text %>
  </div>
    <%= f.submit%>
  <% end %>

</div>
