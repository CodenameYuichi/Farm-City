<div class='container'>
  <div class='well'>
    <h1><%= @place.name %></h1>
    <div>
      GPS: <%= @place.width %>, <%= @place.height %>
    </div>
    <div class='row'>
      <% if current_user.places.include?(@place) %>
        <%= link_to 'Usuń ulubionych', place_favourite_path(@place, 1), method: :delete %>
      <% else %>
        <%= link_to 'Dodaj do ulubionych', place_favourites_path(@place), method: :post %>
      <% end %>
      <%= link_to t(:edit), edit_place_path(@place) %> |
      <%= link_to t(:back), places_path %>
    </div>
  </div>
  <div class='well'>
    <h2>Opis</h2>
    <p><%= @place.description %></p>
  </div>
  <div class='row well'>
    <h2>Mapa</h2>
    <div id="map"></div>
      <script> nodes = [{ lat: <%= @place.height %>, lng: <%= @place.width %> }] </script>
  </div>
  <div class='row'>
    <h2>Galeria</h2>
    <p>
      <%= link_to 'Pełna galeria', place_images_path(@place.id) %>
    </p>
    <% @images.each do |image| %>
      <div class='col-sm-3'>
        <%= image_tag image.picture.medium.to_s, class: 'img-responsive img-rounded' %>
        <em><%= image.name %></em>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <%= link_to t('.add_image'), new_place_image_path(@place.id) %>
  </div>
  <div class='row well'>
    <h2>Komentarze</h2>
    <div id='comments'>
      <%= render @comments %>
    </div>
  </div>

  <%= form_for @comment, url: place_comments_path(@place), remote: true do |f| %>
    <div class='form group'>
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    <div class='form group'>
      <%= f.submit%>
    </div>
  <% end %>

</div>
