<div class='container'>
  <h1>Listing places</h1>
  <ul class='list-unstyled'>
    <% @places.each do |place| %>
      <li>
        <div class='row'>
          <div class='col-md-2'><img src="http://placehold.it/100x100"></div>
          <div class='col-md-8'>
            <h3 class='inline-block'><%= place.name %></h3>
            gps: <%= place.width %>, <%= place.height %>
            <p><%= place.description %></p>
          </div>
          <div class='col-md-2'>
            <%= link_to t(:show), place %>
            <%= link_to t(:edit), edit_place_path(place) %>
            <%= link_to t(:delete), place, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

  <div class='row'>
    <div class='col-md-12'>
    <%= link_to t('.new_place'), new_place_path %>
    </div>

  </div>
</div>
