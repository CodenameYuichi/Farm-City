<div class='container'>
  <h1>Listing places</h1>

<!--   <div class='row'>
        <div class='col-xs-2 col-md-2'><strong>Name</strong></div>
        <div class='col-xs-2 col-md-2'><strong>Width</strong></div>
        <div class='col-xs-2 col-md-2'><strong>Height</strong></div>
        <div class='col-xs-2 col-md-2'><strong>Description</strong></div>
  </div> -->
  <ul class='list-unstyled'>
    <% @places.each do |place| %>
      <li>
        <div class='row'>
          <div class='col-md-2'><img src="http://placehold.it/100x100"></div>
          <div class='col-md-8'>
            <h3 class='inline-block'><%= place.name %></h3>
            gps: <%= place.width %>, <%= place.height %>
            <p><%= place.description %></p>
          </div>
          <div class='col-md-2'>
            <%= link_to 'Show', place %>
            <%= link_to 'Edit', edit_place_path(place) %>
            <%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

  <div class='row'>
    <div class='col-md-12'>
    <%= link_to 'New Place', new_place_path %>
    </div>
  </div>
</div>
