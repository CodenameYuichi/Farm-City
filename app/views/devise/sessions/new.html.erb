<div class='container'>
  <div class='well'>
    <h2 class='white'>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='form-group'><%= f.label :email, class: 'white' %><br />
      <%= f.email_field :email, autofocus: true %></div>

      <div class='form-group'><%= f.label :password, class: 'white' %><br />
        <%= f.password_field :password, autocomplete: "off" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: 'white' %></div>
      <% end -%>

      <div><%= f.submit "Log in" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
