<div class='col-sm-6 col-md-4'>
  <div class='thumbnail'>
    <%= link_to place_image_path(image.place, image) do %>
      <%= image_tag image.picture.large.to_s,
        class: 'img-thumbnail img-responsive gallery'
      %>
    <% end %>
    <div class='caption'>
      <h3>
        <%= image.name %>
        <%= link_to place_image_path(image.place, image),
          method: :delete, data: { confirm: 'Are you sure?' },
          class: 'btn btn-danger btn-sm pull-right' do
        %>
          <span class='glyphicon glyphicon-remove'></span>
        <% end %>
        <div class='clearfix'></div>
      </h3>
    </div>
  </div>
</div>
