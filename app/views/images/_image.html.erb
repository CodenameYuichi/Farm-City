<div class='col-sm-6 col-md-4'>
  <div class='thumbnail'>
    <%= link_to place_image_path(image.place, image) do %>
      <%= image_tag image.picture.large.to_s,
        class: 'img-thumbnail img-responsive gallery'
      %>
    <% end %>
    <div class='caption'>
      <h3 class='text-center'><%= image.name %></h3>

      <p>
        <%= link_to image.place,
          class: 'btn btn-default btn-sm' do
        %>
          <span class='glyphicon glyphicon-globe'></span>
          <strong><%= image.place.name %></strong>
        <% end %>

        <%= link_to place_image_path(image.place, image),
          method: :delete, data: { confirm: 'Are you sure?' },
          class: 'btn btn-danger btn-sm' do
        %>
          <span class='glyphicon glyphicon-remove'></span>
        <% end %>
      </p>
    </div>
  </div>
</div>
