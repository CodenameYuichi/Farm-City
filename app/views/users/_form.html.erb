<div class='container row'>
  <div class='col-xs-6 col-xs-offset-3'>
    <h2><%= @user.new_record? ? 'New user' : 'Editing user' %></h2>
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label t(:name) %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label t(:width) %><br>
        <%= f.number_field :width, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label t(:height) %><br>
        <%= f.number_field :height, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label t(:radius) %><br>
        <%= f.number_field :radius, class: 'form-control' %>
      </div>

      <%= f.submit t(:update), class: 'btn btn-success btn-lg pull-right'%>
    <% end %>
  </div>
</div>
